.main
  .wrapper
    .job
      .job__cell.job__cell--main
        header.job__head
          .job-media
            if (img !== "")
              a(href='http://bitvagas.com/' target='_blank').job-media__img
                img(src='#{ site_img }bitvagas100x100.png')
            .job-media__body
              h1.job__title  #{ title } <span class="job__company">na #{ website === "" ? company : "<a href='#{ company }' target='_blank'>#{ company }</a>" }</span>
          ul.job-info
            li
              |  <div class="label label--#{ (job_type).toLowerCase() }">#{ job_type }</div>
            li
              img(src='#{ site_img }local.svg').job__icon
              .job__local #{ local }
            li
              img(src='#{ site_img }calendar.svg').job__icon
              .job__date #{ timestamp }

        .job__body
          ul.job-social
            li
              |  <iframe src="http://platform.twitter.com/widgets/tweet_button.1359159993.html#_=1360010161235&amp;count=horizontal&amp;id=twitter-widget-0&amp;lang=pt-BR&amp;size=m&amp;url=http://bitvagas.com/#{ lang == "en" ? "" : lang + "/" }job/#{ slug }&amp;text=BitVagas - #{ tweet }" class="twitter-share-button twitter-count-horizontal" data-twttr-rendered="true" allowtransparency="true" frameborder="0" scrolling="no" width="82" height="20"></iframe>
            li
              |  <iframe src="//www.facebook.com/plugins/like.php?href=http://bitvagas.com/#{ lang == "en" ? "" : lang + "/" }job/#{ slug }&amp;send=false&amp;layout=button_count&amp;width=100&amp;show_faces=false&amp;colorscheme=light&amp;action=like&amp;height=20" allowtransparency="true" frameborder="0" scrolling="no" width="82" height="20"></iframe>
            li(style='width: 74px;')
              | <div class="g-plusone" data-size="medium" data-href="http://bitvagas.com/#{ lang == "en" ? "" : lang + "/" }job/#{ slug }" data-href="http://bitvagas.com/"></div>

          h6 Descrição do trabalho:
          p #{ job_description }

          form(action="https://docs.google.com/forms/d/1AIBX-zjbQ_edm4ZdCqqrUixKj7Cpvb2tjwFSTWpzSpw/formResponse" method="POST" id="ss-form" target="_self").job-form
            .job-form__head
              h5.job-form__title Aplicar para #{ title } na #{ company }
            .job-form__body
              ul.job-form__list
                li
                  label.job-form__label Email:
                  .job-form__field
                    input#entry_955005878.job-form__input.input.input--full(type='email', placeholder='Email', name='entry.955005878', value='', dir='auto', aria-label='Email:  Precisa ser um endereço de e-mail válido', aria-required='true', required='', title='Precisa ser um endereço de e-mail válido')

                li
                  label.job-form__label Nome:
                  .job-form__field.job-form__field--name
                    .job-form__cell
                      input#entry_1558225822.job-form__input.input.input--full(type='text', placeholder='Nome', name='entry.1558225822', value='', dir='auto', aria-label='Name:  Precisa conter ', aria-required='true', required='', pattern='.*.*', title='Precisa conter ')
                    .job-form__cell
                      input#entry_713180040.job-form__input.input.input--full(type='text', placeholder='Sobre nome', name='entry.713180040', value='', dir='auto', aria-label='Last Name:  Precisa conter ', aria-required='true', required='', pattern='.*.*', title='Precisa conter ')
                li
                  label.job-form__label Links de Referência:
                  .job-form__field
                    textarea#entry_944889134.job-form__input.textarea.textarea--full(name='entry.944889134', placeholder='Linkedin, myportfolio.com...', rows='1', cols='0', dir='auto', aria-label='Reference Links:  Precisa ter pelo menos 20 caracteres.', aria-required='true', required='')
                li
                  label.job-form__label Apresentação:
                  .job-form__field
                    textarea#entry_1496250376.job-form__input.textarea.textarea--full(name='entry.1496250376', rows='5', cols='0', dir='auto', aria-label='Cover Letter:  Precisa ter pelo menos 100 caracteres.', aria-required='true', required='')

            .job-action
              input#ss-submit.job-action__btn.btn.btn--primary.btn--medium(type="submit" name="submit" value="Candidatar-se à vaga")

